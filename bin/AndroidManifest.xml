<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.vsis.clh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.vsis.clh.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.vsis.clh.DisplayRecognizeActivity"
            android:label="@string/title_activity_display_recognize"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="de.vsis.clh.cam.CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="de.vsis.clh.CreatActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name="de.vsis.clh.ChangeActivity"
            android:label="@string/title_activity_change" >
        </activity>
        <activity
            android:name="de.vsis.clh.DatabaseActivity"
            android:label="@string/title_activity_database" >
        </activity>
    </application>

</manifest>