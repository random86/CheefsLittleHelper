<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_width="280dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/camera_60pixel"
        android:onClick="openRecognizActivity"
        android:text="@string/button_recogniz" />

    <Button
        android:layout_width="280dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/add_60pixel"
        android:onClick="openLernActivity"
        android:text="@string/button_lern" />

    <Button
        android:layout_width="280dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/edit_60pixel"
        android:onClick="openEditActivity"
        android:text="@string/button_edit" />

    <Button
        android:layout_width="280dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/database_60pixel"
        android:onClick="openDatabaseActivity"
        android:text="@string/button_database" />

</LinearLayout>