<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".CreatActivity" >

        <EditText
            android:id="@+id/change_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/creat_firstname" />

        <EditText
            android:id="@+id/change_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/creat_lastname" />

        <EditText
            android:id="@+id/change_age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/creat_age" />

        <EditText
            android:id="@+id/change_courses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/creat_courses" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="loadData"
            android:text="@string/button_load" />
    </LinearLayout>

</ScrollView>